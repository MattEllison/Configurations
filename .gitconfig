[user]
	email = mellison@doctorlogic.com
	name = Matthew Ellison
[alias]
	unstage = reset --
	UndoBranch = 
	u = checkout .
	ut = echo 'test'
	hist = log --oneline --max-count=10 
	hist2 = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	histme =  log --pretty=oneline --author='Matthew Ellison'
	unstage = reset HEAD
	resetme = clean -fd
	
	branches = !git for-each-ref --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
	branches2 = !git for-each-ref --sort=-committerdate refs/heads/* --format='%(committerdate:iso) %(refname:short) (%(contents:subject))'

	undomerge = reset --hard HEAD^
	diffdev = diff dev --compact-summary
	remotes = remote -v

[core]
	autocrlf = false
	safecrlf = false